{
  "build": {
    "nixpacks": {
      "phases": {
        "install": {
          "nixpkgs": [
            "php82",
            "php82Packages.composer",
            "php82Extensions.pdo_mysql",
            "php82Extensions.gd",
            "php82Extensions.fileinfo",
            "php82Extensions.exif",
            "php82Extensions.mbstring",
            "php82Extensions.zip",
            "nginx",
            "php82Packages.php-fpm"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && php-fpm -F"
  }
}
